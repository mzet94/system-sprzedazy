{% extends "base.html.twig" %}

{% block content %}
	<div class="container w-50 p-3 mt-5"><br/>
		{% if error %}
			{%  include 'default/_single_flash_message.html.twig' with {
				type: 'danger',
				message: 'error.messageKey'|trans
			} %}
		{% endif %}
		<div class="card">
			<div class="card-header">
				Logowanie
			</div>
			<div class="card-body">		 
				<form action="{{ path("fos_user_security_check") }}" method="post">
					<div class="form-group">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<label for="username">{{ 'security.login.username'|trans }}</label>
						<input type="text" class="form-control"  id="username" name="_username" placeholder="Wpisz swoją nazwę użytkownika" value="{{ last_username }}" required="required" />
					</div>
					<div class="form-group">
						<label for="password">{{ 'security.login.password'|trans}}</label>
						<input type="password" class="form-control" id="password" placeholder="Podaj hasło do konta" name="_password" required="required" />
					</div>
					<input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
				</form>
			</div>
		</div>
	</div>
{% endblock content %} 