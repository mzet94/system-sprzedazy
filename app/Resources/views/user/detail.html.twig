{% extends 'base.html.twig' %}

{% block title %}
    {{ 'add.details'|trans }}
{% endblock %}

{% block content %}
<div class="container w-75 p-3"><br/><br/>
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div>
            {% include 'default/_flash_messages.html.twig' %}
			{% include 'default/_single_flash_message.html.twig' with {
				type: 'warning',
				message:  'Uzupełnij swoje informacje kontaktowe, aby twoje zamówienia mogły zostać zrealizowane!'
				}%}
        </div>
		<div class="card">
			<div class="card-header"><h2> Dodaj informacje kontaktowe</h2></div>
				<div class="card-body">
				{% include 'default/_form.html.twig' with {
					page_title: '',
					attr: {
						method: 'post',
						action: url('detail_add')
					},
					submit_label: 'Zapisz'
				} %}
				</div>
			</div>
		</div>
	{% else %}
		<div class="alert alert-danger" role="alert">
			{{ 'message.error.not.allow'|trans }}
		</div>
	{% endif %}
</div>
{% endblock %}