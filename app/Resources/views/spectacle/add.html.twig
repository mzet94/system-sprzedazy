{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.spectacle_add'|trans }}
{% endblock %}

{% block content %}
	<div class="container w-75 p-3"><br/><br/>
	{% if is_granted('ROLE_ADMIN') %}
		<div class="card">
			<div class="card-header"><h2>Dodaj spektakl</h2></div>
				<div class="card-body">
					{% include 'default/_form.html.twig' with {
					page_title: '',
					attr: {
					method: 'post',
					action: url('spectacle_add')
					},
					back_to_list_path: 'spectacle_index',
					} %}
				</div>
			</div>
		</div>
	{% else %}
		<div class="alert alert-danger" role="alert">
			{{ 'message.error.not.allow'|trans }}
		</div>
	{% endif %}
	</div>
{% endblock %}